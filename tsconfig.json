{
  "compilerOptions": {
    "target": "ES2022",
    "module": "ESNext",
    "moduleResolution": "Bundler",
    "strict": true,
    "rootDir": "src",
    "resolveJsonModule": true,
    "noEmit": true,
    "lib": [
      "ES2022",
      "DOM"
    ],
    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": true,
    "types": [
      "chrome"
    ]
  },
  "include": [
    "src/**/*.ts"
  ],
  "exclude": [
    "public",
    "dist",
    "node_modules"
  ]
}
