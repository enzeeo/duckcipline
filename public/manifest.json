{
  "manifest_version": 3,
  "name": "Duckcipline",
  "description": "Privacy-first focus timer for Chrome. Runs locally and resets when Chrome closes.",
  "version": "0.1.0",
  "action": {
    "default_title": "Duckcipline Focus Timer"
  },
  "side_panel": {
    "default_path": "popup.html"
  },
  "background": {
    "service_worker": "background/background.js",
    "type": "module"
  },
  "permissions": [
    "storage",
    "sidePanel"
  ]
}
